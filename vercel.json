{
  "buildCommand": "npm run build:client",
  "outputDirectory": "dist/public",
  "headers": [
    {
      "source": "/embed(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://www.eon-drive.de"
        }
      ]
    },
    {
      "source": "/((?!embed).*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'none'"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/calculate-tco", "destination": "/api/calculate-tco" },
    { "source": "/((?!api/).*)", "destination": "/" }
  ]
}
